{
  "name": "performance",
  "license": "GPL-2.0-or-later",
  "repository": "git+https://github.com/WordPress/performance.git",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "dependencies": {
    "web-vitals": "3.5.0"
  },
  "devDependencies": {
    "@octokit/rest": "^19.0.5",
    "@wordpress/env": "^8.13.0",
    "@wordpress/scripts": "^26.19.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "lodash": "4.17.21",
    "npm-run-all": "^4.1.5",
    "webpackbar": "^6.0.1"
  },
  "scripts": {
    "changelog": "./bin/plugin/cli.js changelog",
    "since": "./bin/plugin/cli.js since",
    "readme": "./bin/plugin/cli.js readme",
    "build": "wp-scripts build",
    "build-plugins": "npm-run-all 'build:plugin:!(performance-lab)'",
    "build:plugin:performance-lab": "rm -rf build/performance-lab && mkdir -p build/performance-lab && git archive HEAD | tar -x -C build/performance-lab",
    "build:plugin:auto-sizes": "webpack --mode production --env plugin=auto-sizes",
    "build:plugin:dominant-color-images": "webpack --mode production --env plugin=dominant-color-images",
    "build:plugin:embed-optimizer": "webpack --mode production --env plugin=embed-optimizer",
    "build:plugin:optimization-detective": "webpack --mode production --env plugin=optimization-detective",
    "build:plugin:speculation-rules": "webpack --mode production --env plugin=speculation-rules",
    "build:plugin:webp-uploads": "webpack --mode production --env plugin=webp-uploads",
    "format-js": "wp-scripts format",
    "lint-js": "wp-scripts lint-js",
    "format-php": "composer format",
    "phpstan": "composer phpstan",
    "lint-php": "composer lint:all",
    "test:php": "wp-env run tests-cli --env-cwd=/var/www/html/wp-content/plugins/performance composer phpunit",
    "test-php-plugins": "wp-env run tests-cli --env-cwd=/var/www/html/wp-content/plugins/performance/plugins/$npm_config_plugin env WP_MULTISITE=$npm_config_multisite php ../../vendor/bin/phpunit --verbose",
    "test:php:plugins": "npm-run-all 'test:php:!(all|plugins|multisite)'",
    "test:php:auto-sizes": "npm run test-php-plugins --plugin=auto-sizes",
    "test:php:dominant-color-images": "npm run test-php-plugins --plugin=dominant-color-images",
    "test:php:embed-optimizer": "npm run test-php-plugins --plugin=embed-optimizer",
    "test:php:optimization-detective": "npm run test-php-plugins --plugin=optimization-detective",
    "test:php:speculation-rules": "npm run test-php-plugins --plugin=speculation-rules",
    "test:php:webp-uploads": "npm run test-php-plugins --plugin=webp-uploads",
    "test:php:multisite": "wp-env run tests-cli --env-cwd=/var/www/html/wp-content/plugins/performance env WP_MULTISITE=1 composer phpunit",
    "test:php:multisite:plugins": "npm-run-all 'test:php:multisite:!(plugins)'",
    "test:php:multisite:auto-sizes": "npm run test-php-plugins --plugin=auto-sizes --multisite=1",
    "test:php:multisite:dominant-color-images": "npm run test-php-plugins --plugin=dominant-color-images --multisite=1",
    "test:php:multisite:embed-optimizer": "npm run test-php-plugins --plugin=embed-optimizer --multisite=1",
    "test:php:multisite:optimization-detective": "npm run test-php-plugins --plugin=optimization-detective --multisite=1",
    "test:php:multisite:speculation-rules": "npm run test-php-plugins --plugin=speculation-rules --multisite=1",
    "test:php:multisite:webp-uploads": "npm run test-php-plugins --plugin=webp-uploads --multisite=1",
    "test:php:all": "npm-run-all 'test:php' 'test:php:plugins' 'test:php:multisite' 'test:php:multisite:plugins'",
    "wp-env": "wp-env",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.php": [
      "composer run-script lint",
      "composer run-script phpstan"
    ],
    "*.js": [
      "npm run lint-js"
    ]
  }
}
